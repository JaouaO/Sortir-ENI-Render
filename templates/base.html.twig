<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">  {# important pour mobile #}
    <title>{% block title %}Welcome World !{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/ENI.svg') }}">

    {% block stylesheets %}{% endblock %}

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* ========================== */
        /* Global */
        body {
            margin: 0;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, sans-serif;
            background-color: #f9f9f9;
        }

        .custom-navbar {
            background-color: #708980;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.4rem;
        }

        .sortir-logo {
            color: white;
        }

        .page-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1;
            padding: 1.5rem;
        }

        /* Footer */
        .footer-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: .5rem;
            padding: 1rem 0;
        }

        .btn-back, .btn-edit {
            display: inline-block;
            width: auto;
            padding: 0.6rem 1.2rem;
            border-radius: 8px;
            background-color: #0d6efd;
            color: white;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: background 0.3s;
        }

        .btn-back:hover, .btn-edit:hover {
            background-color: #0b5ed7;
        }

        footer {
            width: 100%;
            text-align: center;
            background-color: #708980;
            color: white;
            padding: 10px 0;
            border-radius: 4px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.2rem;
            }

            .content {
                padding: 1rem;
            }

            .btn-back, .btn-edit {
                width: 100%;
                font-size: 1rem;
            }

            footer {
                font-size: 0.9rem;
            }
        }

        @media (max-width: 480px) {
            .profile-card, .registration-card, .cancel-card {
                padding: 1rem;
            }

            h1 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
    <div class="container">
        <a class="navbar-brand" href="{{ path('home') }}">
            <span class="sortir-logo">Sortir.com</span>
        </a>
        <!-- bouton burger -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- menu -->
        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Accueil</a></li>
                {% if is_granted('ROLE_ADMINISTRATEUR') %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin_administration') }}">Interface Admin</a></li>
                {% endif %}
                {% if is_granted('ROLE_ORGANISATEUR') %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('event_create') }}">Créer une sortie</a></li>
                {% endif %}
                {% if is_granted('IS_AUTHENTICATED') %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('user_profile', {'id': app.user.id}) }}">Mon profil</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('groups', {'id': app.user.id}) }}">Mes groupes</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('user_logout') }}">Déconnexion</a></li>
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('user_register') }}">Inscription</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('user_login') }}">Connexion</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{# Flash messages #}
<div class="container mt-3">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>

<div class="page-container">
    <div class="content container">
        {% block body %}{% endblock %}
        <div class="footer-container mt-4">
            <button class="btn-back" onclick="history.back()">⬅ Retour</button>
            <footer>&copy; Sortir-ENI {{ "now"|date("Y") }}</footer>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
