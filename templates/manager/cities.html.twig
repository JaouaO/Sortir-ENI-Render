{% extends 'base.html.twig' %}

{% block title %}Gestion{% endblock %}

{% block body %}
    <h1 class="mt-4 mb-4">Gestion des villes</h1>

    <h3 class="mb-3">Filtrer les villes</h3>
    <div class="row">
        <div class="col-md-6">
            <form method="get" action="{{ path('manager_cities') }}" class="d-flex">
                <div class="input-group">
                    <label for="search" class="input-group-text">Trouver une ville</label>
                    <input type="text" id="search" name="search" class="form-control" placeholder="Entrez le nom de la ville">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        {% for city in cities %}
            <div class="card mb-2">
                <div class="card-body">
                    <div class="buttonAndText">
                        <h5 class="card-title">{{ city.name }}</h5>
                        <p class="card-text">Code postal : {{ city.postCode }}</p>
                    </div>
                    <div class="buttonAndText">
                        <a href="{{ path('manager_delete', {id: city.id}) }}" class="btn btn-sm btn-danger"
                           onclick="return confirm('Etes vous sÃ»r de vouloir supprimer cette ville ?')">
                            Supprimer</a>

                        <button class="btn btn-sm btn-warning">Modifier</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}